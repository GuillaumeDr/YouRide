<div class="container-fluid">
  <div class="row d-flex justify-content-beetween">
    <h2 class="mt-5">My bookings</h2>
    <% @myreservations.each do |reservation| %>
      <div class="col-lg-6 col-sm-12 col-12">
          <div class=" container-booking mt-3">
            <div class="booking-image">
              <%= link_to ski_path(reservation) do %>
                <% if reservation.ski.photo.attached? %>
                  <img , src='<%= cl_image_path reservation.ski.photo.key, crop: :fill %>'>
                <% else %>
                  <img , src='https://images.unsplash.com/photo-1622484446431-e4592de4a7ba?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170ss'>
                <% end %>
              <% end %>
              <div class="info d-flex flex-column align-item-center">
                <ul>
                  <li><strong>Size : </strong><%= reservation.ski.size %></li>
                  <% if reservation.ski.poles = true %>
                    <li><strong>Poles : </strong>included</li>
                  <% else %>
                    <li><strong>Poles : </strong>not included</li>
                  <% end %>
                  <li><strong>Rented by : </strong><%=reservation.ski.user.first_name %><%=reservation.ski.user.last_name %></li>
                  <li><strong>Référence : </strong><%=reservation.ski.id%> <%=(reservation.ski.user.id)%><%=(reservation.ski.types).downcase%><%=(reservation.ski.user.last_name).downcase%></li>
                </ul>
              </div>
            </div>
            <div class="booking-details">
              <h2><strong><%= reservation.ski.types%>, <%= reservation.ski.city%> n°<%= reservation.ski.id%> </strong><br>
              # Demand <%= reservation.id%></h2>
              <p>Status: <%= reservation.status %></p>
              <p>Owner: <%= reservation.ski.user.first_name %> <%= reservation.ski.user.last_name %></p>
              <p>From <%= reservation.start_date %> to <%= reservation.end_date %></p>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
